---
import Container from './Container.astro';

const logos = [
	{
		name: 'Alpost',
		url: 'alpost.svg',
		date: 'August 2022',
	},
	{
		name: 'Alssweeper',
		url: 'alssweepers.svg',
		date: 'June 2022',
	},
	{
		name: 'My',
		url: 'portfolio.svg',
		date: 'October 2021',
	},
	{
		name: 'BioBoost',
		url: 'bioboost.svg',
		date: 'September 2021',
	},
	{
		name: "Cam'struction",
		url: 'camstruction.svg',
		date: 'July 2021',
	},
	{
		name: 'Beauty Bratz',
		url: 'beauty-bratz.svg',
		date: 'September 2019',
	},
];
---

<Container>
	<section class="py-24 pt-0 space-y-6" id="portfolio">
		<h2 class="text-4xl font-bold text-neutral-100">Logos</h2>

		<div class="grid sm:grid-cols-2 lg:grid-cols-3 xl:grid-cols-4 gap-12">
			{
				logos.map((logo) => (
					<div class="space-y-3">
						<img
							src={`/logos/${logo.url}`}
							alt={`${logo.name} logo`}
							class="rounded-2xl"
							width="100%"
							height="100%"
						/>
						<div class="flex items-center gap-3 justify-between">
							<h3 class="text-2xl font-bold text-neutral-100 capitalize">
								{logo.name} Logo
							</h3>
							<span class="text-neutral-400 text-sm">{logo.date}</span>
						</div>
					</div>
				))
			}
		</div>
	</section>
</Container>
