---
import { HiCheck, HiX } from 'react-icons/hi/index.js';
import Container from './Container.astro';
import PrimaryButton from './PrimaryButton.astro';

const plans = [
	{
		name: 'Basic',
		price: '20',
		pages: '1 - 5',
		domain: true,
		SSL: true,
		hosting: true,
		maintenance: false,
		logo: false,
		animations: false,
		ecommerce: false,
	},
	{
		name: 'Standard',
		price: '35',
		pages: '6 - 30',
		domain: true,
		SSL: true,
		hosting: true,
		maintenance: true,
		logo: true,
		animations: true,
		ecommerce: false,
	},
	{
		name: 'Premium',
		price: '50',
		pages: '30+',
		domain: true,
		SSL: true,
		hosting: true,
		maintenance: true,
		logo: true,
		animations: true,
		ecommerce: true,
	},
];
---

<Container>
	<section class="py-24 pt-0 space-y-6" id="portfolio">
		<h2 class="text-4xl font-bold text-neutral-100">Pricing Plans</h2>

		<div class="grid md:grid-cols-3 gap-12 items-start">
			{
				plans.map((plan) => (
					<div class="space-y-3 bg-neutral-900 p-6 rounded-2xl flex flex-col">
						<h3 class="text-2xl font-bold text-neutral-100 capitalize">
							{plan.name}
						</h3>
						<h4 class="text-3xl font-bold text-neutral-100 flex items-center gap-1.5">
							${plan.price}{' '}
							<span class="text-neutral-400 text-sm font-normal">/ month</span>
						</h4>

						<dl class="divide-y divide-neutral-800">
							{[
								'pages',
								'domain',
								'SSL',
								'hosting',
								'maintenance',
								'logo',
								'animations',
								'ecommerce',
							].map((key) => (
								<>
									{plan[key] === false ? null : (
										<div class="flex items-center justify-between py-2">
											<dt class="text-neutral-400 text-sm capitalize">{key}</dt>
											<dd class="text-neutral-100 font-bold">
												{typeof plan[key] === 'boolean' ? (
													plan[key] ? (
														<span class="text-neutral-100">
															<HiCheck />
														</span>
													) : (
														<span class="text-neutral-400">
															<HiX />
														</span>
													)
												) : (
													plan[key]
												)}
											</dd>
										</div>
									)}
								</>
							))}
						</dl>
						<PrimaryButton to="https://docs.google.com/forms/d/e/1FAIpQLSfgPDuhoype0QgVvJFWVw9QTvm4bZYs2KaI0rtheEu-hPm87A/viewform?usp=sf_link">
							Get Started
						</PrimaryButton>
					</div>
				))
			}
		</div>
	</section>
</Container>
