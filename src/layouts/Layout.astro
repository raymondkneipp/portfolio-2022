---
import Footer from '@components/Footer.astro';
import Nav from '@components/Nav/Index.astro';
import {SEO} from "astro-seo";

export interface Props {
	title?: string;
	description?: string;
	image?: string;
}

let { title, description, image } = Astro.props as Props;

title = title || "Custom Affordable Web Design";
title += " | Raymond Kneipp"
description = description || "I create unique, tailored, websites that are quick, performant and search engine optimized.";
let alt = image ? title : "RK Web Design Logo"
image = image ? "https://raymondkneipp.com" + image : "https://raymondkneipp.com/websites.png"

---

<!DOCTYPE html>
<html lang='en'>
	<head>
		<meta charset='UTF-8' />
		<meta name='viewport' content='width=device-width' />
		<meta name='theme-color' content='#18181B' />
		<meta name='color-scheme' content='dark' />
		<link rel='icon' type='image/svg+xml' href='/favicon.svg' />
		<link rel='icon' type='image/png' href='/favicon.png' />

		<SEO
      title={title}
      description={description}
			openGraph={{
				basic: {
					title,
					type: "website",
					image
				},
				image: {
					alt
				}
			}}
			 />
	</head>
	<body class='bg-zinc-900'>
		<Nav />
		<slot></slot>
		<Footer />
	</body>
</html>
